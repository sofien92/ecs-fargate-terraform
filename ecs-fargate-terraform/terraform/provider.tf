terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = "ECS-Fargate-Demo"
      Environment = var.environment
      ManagedBy   = "Terraform"
    }
  }
}
